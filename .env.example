# Default environment variables for MCP PowerShell Exec

# Server configuration
MCP_PWSH_SERVER__HOST=127.0.0.1
MCP_PWSH_SERVER__PORT=8000

# Logging configuration
MCP_PWSH_LOGGING__LOG_LEVEL=INFO
MCP_PWSH_LOGGING__LOG_DIR=logs
MCP_PWSH_LOGGING__LOG_FORMAT=text

# Security configuration
MCP_PWSH_SECURITY__REQUIRE_API_KEY=false
# Uncomment and set API keys if you want to enable authentication
# MCP_PWSH_SECURITY__API_KEYS=key1,key2,key3

# PowerShell execution policy
MCP_PWSH_SECURITY__EXECUTION_POLICY=Restricted
